generator client {
  provider = "prisma-client-js"
  output   = "../src/prisma"
}


datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id      Int      @id
  name    String?
  email   String   @unique
  Post    Post[]
  Profile Profile?
}

model Post {
  id        Int      @id
  title     String
  createdAt DateTime @default(now())
  content   String?
  published Boolean  @default(false)
  authorId  Int
  User      User     @relation(fields: [authorId], references: [id])
}

model Profile {
  id     Int     @id
  bio    String?
  userId Int     @unique
  User   User    @relation(fields: [userId], references: [id])
}
